

@model IEnumerable<AMS.DataTransferObjects.Modules.OptionsDTO>

<table class="table table-striped table-hover table-bordered" id="OptionsTable" width="100%">
    <thead>
        <tr>
            <th> Option Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.OptionTitle </td>
                    <td>
                        <a class='fa fa-trash-o' onclick="AMS.DeleteOption(@item.OptionId)" style='color: #42166f;' data-toggle='tooltip' title='Delete Part' href='javascript:;'></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        AMS.InitializeDataTable("OptionsTable");
    });
</script>
