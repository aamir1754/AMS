@model IEnumerable<AMS.DataTransferObjects.Modules.DocumentsDTO>

<table class="table table-striped table-hover table-bordered" id="DocumentTable" width="100%">
    <thead>
        <tr>
            <th>Document Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.DocumentTitle </td>
                    <td>
                        <a class='fa fa-download' data-id="@item.DocumentId" onclick="AMS.DownloadDocument(@item.DocumentId)" data-toggle='tooltip' title='Download Document' href='javascript:;'></a> |
                        <a class='fa fa-trash-o' onclick="AMS.DeleteDocument(@item.DocumentId)" data-toggle='tooltip' title='Delete Document' href='javascript:;'></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        AMS.InitializeDataTable("DocumentTable");
    });
</script>

