
@model IEnumerable<AMS.DataTransferObjects.Modules.PartsDTo>

<table class="table table-striped table-hover table-bordered" id="PartsTable" width="100%">
    <thead>
        <tr>
            <th width="40%"> Part Name</th>
            <th width="40%">Part Options</th>
            <th width="20%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.PartName </td>
                    <td><button class="btn btn-success" onclick="AMS.GetOptions(@item.PartId, '@item.PartName')"> Options </button></td>
                    <td>
                        <a class='fa fa-pencil' data-id="@item.PartId" onclick="AMS.UpdatePart(this)" style='color: #42166f;' data-toggle='tooltip' title='Edit Part' href='javascript:;'></a> |
                        <a class='fa fa-trash-o' onclick="AMS.DeletePart(@item.PartId)" style='color: #42166f;' data-toggle='tooltip' title='Delete Part' href='javascript:;'></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        AMS.InitializeDataTable("PartsTable");
    });
</script>
