@model IEnumerable<AMS.DataTransferObjects.Modules.TagsDTO>

<table class="table table-striped table-hover table-bordered" id="TagsTable" width="100%">
    <thead>
        <tr>
            <th width="40%">Sr. No.</th>
            <th width="40%">Tags</th>
            <th width="20%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TagId </td>
                    <td>@item.TagTitle</td>
                    <td>
                        <a class='fa fa-pencil' data-id="@item.TagId" onclick="AMS.UpdateTag(this)" style='color: #42166f;' data-toggle='tooltip' title='Edit Tag' href='javascript:;'></a> |
                        <a class='fa fa-trash-o' onclick="AMS.DeleteTag(@item.TagId)" style='color: #42166f;' data-toggle='tooltip' title='Delete Tag' href='javascript:;'></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        AMS.InitializeDataTable("TagsTable");
    });
</script>
