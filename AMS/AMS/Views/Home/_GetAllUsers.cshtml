
@model IEnumerable<AMS.DataTransferObjects.Modules.UserDto>

<table class="table table-striped table-hover table-bordered" id="UserTable" width="100%">
    <thead>
        <tr>
            <th width="40%">Sr. No.</th>
            <th width="40%">Tags</th>
            <th width="20%">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID </td>
                    <td>@item.FullName</td>
                    <td>
                        <a class='fa fa-pencil' data-id="@item.ID" onclick="AMS.UpdateUser(this)" data-toggle='tooltip' title='Edit Tag' href='javascript:;'></a> |
                        <a class='fa fa-trash-o' onclick="AMS.DeleteUSer(@item.ID)" data-toggle='tooltip' title='Delete Tag' href='javascript:;'></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        AMS.InitializeDataTable("UserTable");
    });
</script>
